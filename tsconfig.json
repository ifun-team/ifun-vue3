{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "preserve",
        "baseUrl": ".",
        "rootDir":".",
        "paths":{
            "@ifun-vue3/hooks":["./packages/hooks/index.ts"],
            "@ifun-vue3/hooks/*":["./packages/hooks/*"],
            "@ifun-vue3/metadata":["./packages/metadata/index.ts"],
            "@ifun-vue3/metadata/*":["./packages/metadata/*"]
        },
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "composite": true,
        "incremental": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,      
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./types"  
    },
    "include":[
        "*.ts",
        "packages",
        "meta"
    ],
    "exclude":[
        "node_modules",
        "**/dist"
    ]
}